
model "vtol_uav";

roleset ( { name : "leader" },
          { name : "follower" } );

agentset ( { name : "one", role : "leader" },
           { spawn : 10, role : "follower" } );

environment ( { left: -120, top: -120, right: 120, bottom: 120, z_bottom : 0, z_top: 100 } );

function normalize(angle) {
    while (angle > Math.pi) angle = angle - 2*Math.pi;
    while (angle < -Math.pi) angle = angle + 2*Math.pi;
    return angle;
}

behaviour main {
  with roles("leader") {
    agent.x = 0;
    agent.y = 0;
    agent.z = 20;
    agent.yaw = 3.14159/4.0;
    agent.image = "arrow_red.png";
  }

  with roles("follower") {
    agent.x = Random.uniform(-100, 100);
    agent.y = Random.uniform(-100, 100);
    agent.z = 20;
    agent.yaw = Random.uniform(0, 3);
  }

  with roles("leader") {
    while (1) {
        wait(5);
        agent.yaw = normalize(Random.uniform(0, 2*3.14159));
    }
  }
  |
  with roles("follower") {
    var leader = role("leader");
    while (1) {
      var k_hdg = 1.5;

      var align_difference = normalize(leader.yaw - agent.yaw);
      agent.wz = k_hdg * align_difference;

      wait(0.1);
    }
  }
}

